<AnswerDescription>:
    size_hint_y: None
    pos: int(self.x), int(self.y)
    canvas:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: '10dp'
		spacing: '10dp'

		Label:
			size_hint_y: None
			text: root.title
			font_size: '32sp'
            text_size: self.width - sp(20), None
			size_hint_y: None
			height: self.texture_size[1]

        Label:
            text: root.description
            text_size: self.width - sp(20), None
			size_hint_y: None
			height: self.texture_size[1]
			font_size: '20sp'

		RelativeLayout:
			Carousel:
				id: carousel
			GridLayout:
				cols: 3

				Button:
					background_color: 0, 0, 0, 0
					on_release: carousel.index = max(carousel.index - 1, 0)
					size_hint_x: None
					width: img1.texture_size[0] + sp(20)
					id: btn1
					Image:
						id: img1
						source: 'data/back.png'
						size_hint_x: None
						width: self.texture_size[0] + sp(20)
						opacity: 1 if carousel.index > 0 else 0
						pos: btn1.pos
						size: btn1.size
				Widget
				Button:
					background_color: 0, 0, 0, 0
					on_release: carousel.index = min(carousel.index + 1, len(carousel.slides) - 1)
					size_hint_x: None
					width: img1.texture_size[0] + sp(20)
					id: btn2
					Image:
						id: img2
						source: 'data/next.png'
						opacity: 1 if carousel.index < len(carousel.slides) - 1 else 0
						pos: btn2.pos
						size: btn2.size


