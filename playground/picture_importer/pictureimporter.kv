<AddQuizz>:
    canvas.before:
        Color:
            rgba: color_gray
        Rectangle:
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        # real toolbar, above everything
        BoxLayout:
            size_hint_y: None
