    canvas:
        Color:
            rgba: color_white
        Rectangle:
            pos: self.pos
            size: self.size


<AddQuizzStep>:
    size_hint_y: None
    height: sp(32)
    text_size: self.width, None

    canvas.before:
        Color:
            rgba: (0, 0, 0, .5)
        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        cols: 2
        Label:
            text: 'Etape {}'.format(root.index)

        Button:
            id: btn
            background_normal: ''
            background_down: ''
            background_color: 0, 0, 0, 0
            size_hint_x: None
            width: self.height
            on_release: root.delete()
            AnchorLayout:
                pos: btn.pos
                size: btn.size
                Image:
                    source: 'data/icons/picto_croix{}.png'.format('2' if btn.state == 'normal' else '')
                    size: '20sp', '20sp'
                    size_hint: None, None


