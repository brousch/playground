#:kivy 1.7.0

<MyButton@Button>:
    color: .8,.9,0,1
    font_size: 32

<MainScreenManager>:
    Screen:
        BoxLayout:
            size: root.size
            pos: root.pos
            orientation: 'vertical'
            MyButton:
                text: "TopBtn"
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: 50
                MyButton:
                    id: button
                    sizehint_y: None
                    height: 50
                    text: "MiddleBtn"
            MyButton:
                text: "BottomBtn"